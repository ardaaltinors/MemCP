---
import "./global.css";
import { PreviewPng } from "@static/images";
import MetaConfig from "./MetaConfig.astro";
import Header from "@libs/ui/components/Header.astro";
import Footer from "@libs/ui/components/Footer.astro";

type Props = {
    title: string;
    description: string;
    overwritePreview?: string;
    hideHeader?: boolean;
};

const { title, description, overwritePreview, hideHeader = false } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <MetaConfig
            title={title}
            description={description}
            preview={overwritePreview ? overwritePreview : PreviewPng.src}
        />
    </head>
    <body class="body-gradient">
        {!hideHeader && <Header />}
        <slot />
        <Footer />
    </body>
</html>
