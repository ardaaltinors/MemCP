---
import Layout from "layouts/Layout.astro";
import { DashboardContainer } from "@libs/ui/components/DashboardContainer";
---

<Layout
    title="Arda's Memory Space - MemCP"
    description="Manage your portable agent memory and explore your knowledge graph."
    hideHeader={true}
>
    <main class="min-h-screen bg-[#0D0D1A]">
        {/* Custom Dashboard Header */}
        <div class="absolute top-0 left-0 right-0 z-20 bg-[#0D0D1A]/80 backdrop-blur-xl border-b border-gray-800/50">
            <div class="h-24 px-6 flex items-center justify-between">
                {/* Left: Logo */}
                <a href="/" class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center">
                        <span class="text-white font-bold text-lg">M</span>
                    </div>
                    <span class="text-white font-semibold text-lg">MemCP</span>
                </a>

                {/* Center: Page Title */}
                <h1 class="absolute left-1/2 transform -translate-x-1/2 text-2xl font-medium text-white">
                    Your Memory Space
                </h1>

                {/* Right: Actions */}
                <div class="flex items-center space-x-6">
                    {/* API Key Button */}
                    <button aria-label="API Key" class="flex items-center space-x-2 px-4 py-2 rounded-lg bg-gray-800/50 hover:bg-gray-800 transition-colors group">
                        <svg class="w-5 h-5 text-gray-400 group-hover:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                        </svg>
                        <span class="text-gray-300 text-sm font-medium">API Key</span>
                    </button>

                    {/* Profile/Avatar */}
                    <button aria-label="Profile" class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-blue-600 flex items-center justify-center hover:scale-105 transition-transform">
                        <span class="text-white font-semibold">A</span>
                    </button>

                    {/* Settings Dropdown */}
                    <button aria-label="Settings" class="p-2 rounded-lg hover:bg-gray-800/50 transition-colors">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        {/* Dashboard Container with Memory Graph and Detail Panel */}
        <DashboardContainer client:only="react" />
    </main>
</Layout>

<style>
    /* Enhanced dark mode styles for Apple-like aesthetic */
    main {
        font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Inter', sans-serif;
    }

    /* Subtle glow effect for the header */
    .absolute.top-0::after {
        content: '';
        position: absolute;
        bottom: -1px;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            rgba(59, 130, 246, 0.5) 50%, 
            transparent 100%
        );
    }

    /* Enhanced gradient background */
    main::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle 600px at 20% 80%, rgba(99, 102, 241, 0.15), transparent 70%),
            radial-gradient(circle 800px at 80% 20%, rgba(139, 92, 246, 0.1), transparent 70%),
            radial-gradient(circle 1000px at 50% 50%, rgba(59, 130, 246, 0.05), transparent 70%);
        pointer-events: none;
        z-index: 0;
    }

    /* Ensure content is above gradient */
    main > * {
        position: relative;
        z-index: 1;
    }
</style>